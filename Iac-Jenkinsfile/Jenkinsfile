pipeline {
    agent any
 
    stages {
        stage('terraform init') {
            steps{
                sh """
                   cd modules
                   terraform init
                  """
            }
        }
        stage('terraform action') {
            steps {
                  sh """
                   cd modules
                   echo "Terraform action is --> ${action}"
                   terraform ${action} --auto-approve
                  """
 
            }
        }
    }  
